{
  "author": "Tahnik Mustasin",
  "manifest_version": 2,
  "name": "SearchWithGoogle",
  "version": "1.0",

  "description": "Adds Search with Google in Microsoft Edge's context menu",

  "icons": {
    "16": "icons/icon.ico",
    "48": "icons/icon.ico",
    "64": "icons/icon.ico",
    "96": "icons/icon.ico"
  },
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": ["search_with_google.js"],
    "persistent": true
  }
}
